<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ECrudEntrenador">


    <Button
        android:id="@+id/btn_eliminar_bdd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="164dp"
        android:text="Eliminar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_crear_bdd"
        app:layout_constraintTop_toBottomOf="@+id/btn_buscar_bdd" />

    <Button
        android:id="@+id/btn_actualizar_bdd"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:layout_marginEnd="60dp"
        android:text="actualizar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_buscar_bdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_buscar_bdd"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_crear_bdd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="91dp"
        android:text="Crear"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_eliminar_bdd"
        app:layout_constraintEnd_toStartOf="@+id/btn_eliminar_bdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_eliminar_bdd"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_buscar_bdd"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="29dp"
        android:text="Buscar"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_eliminar_bdd"
        app:layout_constraintEnd_toStartOf="@+id/btn_actualizar_bdd"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_id_empresa_proyecto" />

    <EditText
        android:id="@+id/input_presupuesto_proyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Ingrese presupuesto"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/input_id_empresa_proyecto"
        app:layout_constraintStart_toStartOf="@+id/input_descripcion_proyecto"
        app:layout_constraintTop_toBottomOf="@+id/input_descripcion_proyecto" />

    <EditText
        android:id="@+id/input_descripcion_proyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Ingrese descripcion"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/input_presupuesto_proyecto"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_proyecto"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_proyecto" />

    <EditText
        android:id="@+id/input_nombre_proyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Ingrese nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/input_descripcion_proyecto"
        app:layout_constraintStart_toStartOf="@+id/input_id_proyecto"
        app:layout_constraintTop_toBottomOf="@+id/input_id_proyecto" />

    <EditText
        android:id="@+id/input_id_proyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Ingrese id"
        android:visibility="invisible"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/input_nombre_proyecto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_id_empresa_proyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Ingrese id de empresa"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_buscar_bdd"
        app:layout_constraintStart_toStartOf="@+id/input_presupuesto_proyecto"
        app:layout_constraintTop_toBottomOf="@+id/input_presupuesto_proyecto" />

</androidx.constraintlayout.widget.ConstraintLayout>